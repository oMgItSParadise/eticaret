<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="root" xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="source.eticaret.controller.AddressListController"
      spacing="20"
      style="-fx-padding: 20; -fx-background-color: #f5f5f1;">
    
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Button text="← Geri" onAction="#goBack" style="-fx-background-color: transparent; -fx-text-fill: #f1641e; -fx-font-weight: bold; -fx-cursor: hand;" />
        <Label text="Adreslerim" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
    </HBox>
    
    <Button text="+ Yeni Adres Ekle" onAction="#addNewAddress" style="-fx-background-color: #f1641e; -fx-text-fill: white; -fx-padding: 8 15; -fx-font-weight: bold;" />
    
    <VBox fx:id="addressesContainer" spacing="15" style="-fx-padding: 10 0;">
        <!-- Address cards will be added here dynamically -->
    </VBox>
</VBox>
