<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 1, 2);" spacing="10">
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label fx:id="addressTitle" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="editButton" text="Düzenle" style="-fx-background-color: #f0f0f0; -fx-padding: 3 10;" />
        <Button fx:id="deleteButton" text="Sil" style="-fx-background-color: #ffebee; -fx-text-fill: #d32f2f; -fx-padding: 3 10;" />
    </HBox>
    <Label fx:id="addressText" wrapText="true" style="-fx-text-fill: #555;" />
    <HBox spacing="10">
        <CheckBox text="Varsayılan Adres" style="-fx-text-fill: #555;" />
    </HBox>
</VBox>
