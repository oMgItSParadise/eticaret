<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" style="-fx-padding: 20; -fx-pref-width: 500;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="source.eticaret.controller.EditProductController">
    <Label text="Ürün Düzenle" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 0 0 10 0;" />
    
    <GridPane hgap="10" vgap="10">
        <Label text="Ürün Adı:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="0" />
        
        <Label text="Açıklama:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextArea fx:id="descriptionField" wrapText="true" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS" />
        
        <Label text="Fiyat (TL):" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="priceField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        
        <Label text="Stok Miktarı:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="stockField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        
        <Label text="Durum:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <CheckBox fx:id="activeCheckBox" text="Aktif" GridPane.columnIndex="1" GridPane.rowIndex="4" />
    </GridPane>
    
    <HBox spacing="10" style="-fx-padding: 10 0 0 0;" alignment="CENTER_RIGHT">
        <Button text="İptal" fx:id="cancelButton" style="-fx-pref-width: 100; -fx-background-color: #f44336; -fx-text-fill: white;" />
        <Button text="Kaydet" fx:id="saveButton" style="-fx-pref-width: 100; -fx-background-color: #4CAF50; -fx-text-fill: white;" />
    </HBox>
</VBox>
